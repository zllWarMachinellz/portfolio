---
import type { INavbarItems } from "@interfaces/navbar.interface";
import '@styles/fonts/fonts.css'

const { title, link } = Astro.props as INavbarItems;
---

<li>
    <a href=`#${link}`>{title}</a>
</li>

<style>
    li > a {
        text-decoration: none;
        color: var(--color-text);
        text-transform: uppercase;
        font-size: 11px;
        font-family: 'Roboto', sans-serif;
        font-weight: 400;
    }
</style>
